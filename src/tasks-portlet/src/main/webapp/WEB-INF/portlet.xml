<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
             http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	id="tasks-portlet" version="2.0">

	<portlet>
		<portlet-name>tasks-viewer-portlet</portlet-name>
		<display-name>tasks-viewer-portlet</display-name>
		<portlet-class>jpm.mimacom.tasks.portlet.TasksViewer</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<supports>
			<mime-type>application/json</mime-type>
			<portlet-mode>resource</portlet-mode>
		</supports>
		<portlet-info>
			<title>Tasks Viewer Portlet for MIMACOM</title>
			<short-title>Tasks Viewer Portlet</short-title>
			<keywords>tasks mimacom</keywords>
		</portlet-info>
	</portlet>

	<user-attribute>
		<name>user.login.id</name>
	</user-attribute>

</portlet-app>